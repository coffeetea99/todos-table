<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title><%= name %></title>
</head>

<body>
  <% articles.forEach(article => { %>
    <h2 onclick="moveToViewPage('<%= article.id %>')"><%= article.title %></h2>
  <% }) %>

  <input type="button" value="게시글 작성" onclick="movetoWritePage()"/>
  
  <script type="text/javascript">
    function moveToViewPage(index) {
      location.href = `/view?id=${index}`
    }

    function movetoWritePage(){
      location.href = "/write";
    }
  </script>
</body>

</html>